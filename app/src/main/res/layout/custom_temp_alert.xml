<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/custom_temp_alert"
    android:padding="16dp">

    <EditText
        android:id="@+id/editText_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Создайте шаблон команды" />

    <Button
        android:id="@+id/addButton_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_temp"
        android:layout_marginTop="8dp"
        android:text="Добавить" />

    <ScrollView
        android:id="@+id/scroll_radio_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addButton_temp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp">

        <RadioGroup
            android:id="@+id/radioGroup_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <Button
        android:id="@+id/saveButton_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/back_gray"
        android:layout_below="@+id/scroll_radio_temp"
        android:layout_marginBottom="0dp"
        android:text="Сохранить" />

</RelativeLayout>